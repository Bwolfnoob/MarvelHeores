             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MarvelHeroes.Core.ViewModels;assembly=MarvelHeroes.Core"
             x:TypeArguments="viewModels:HeroesListViewModel" 
             x:Class="MarvelHeroes.Views.HeroesListPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Text}"
